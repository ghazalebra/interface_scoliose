        #     id: button_correction
        #     text: 'Afficher corrections'
        #     group: 'graph'
        #     pos_hint: {'x':.43, 'top':.10}
        #     size_hint: (.09, .03)
        #     on_press: root.press_color()
        #     on_press: root.show_correction_gold()
            


<Touch>:
    BoxLayout:
        size_hint: ((702/1960), .78)
        pos_hint: {'x':.02, 'top':.85}
